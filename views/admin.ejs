    <!DOCTYPE html>
    <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Administración de Usuarios</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
      <link rel="stylesheet" href="/styles/admin.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="d-flex flex-grow-1">
                <span class="navbar-brand">
                  Bienvenido <%= user.display_name %>
                  <small class="text-muted">(<%= user.username %>)</small>
                </span>
                  <div class="d-flex">
                    <% if(user.altas){ %>
                    <a href="/alta" class="nav-link-alta <%= currentPage === 'alta' ? 'active' : '' %>">
                      <i class="fas fa-plus-circle"></i>
                      Alta
                    </a>
                    <span class="separador">|</span>
                    <% } %>
                    <% if(user.bajas){ %>
                      <a href="/baja" class="nav-link-baja <%= currentPage === 'baja' ? 'active' : '' %>">
                        <i class="fas fa-minus-circle"></i>
                        Baja
                      </a>
                      <span class="separador">|</span>
                    <% } %>
                  </div>
                  <div class="d-flex">
                    <a href="/admin" class="nav-link-admin <%= currentPage === 'admin' ? 'active' : '' %>">
                      <i class="fas fa-plus-circle"></i>
                      Admin
                    </a>
                  </div>
            </div>
            <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar7">
              <a href="/phishing" class="btn btn-info mx-auto">
                Aprende del phishing
              </a>
              <a href="/logout" class="btn btn-danger">Cerrar Sesión</a>
            </div>
        </nav>
        <div style="text-align: center;">
<span class="table-title ">Tabla de usuarios</span>
</div>
<div class="tabla m-5">
      <form method="POST" action="/admin/update-permissions">
        <table border="1">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nombre de Usuario</th>
              <th>Nombre para Mostrar</th>
              <th>Permiso Alta</th>
              <th>Permiso Baja</th>
              <th>Permiso Admin</th>
            </tr>
          </thead>
          <tbody>
            <% usuarios.forEach(usuario => { %>
              <tr>
                <td><%= usuario.id %></td>
                <td><%= usuario.username %></td>
                <td><%= usuario.display_name %></td>
                <td>
                    <input 
                      type="checkbox" 
                      name="alta_<%= usuario.id %>" 
                      <%= usuario.altas ? 'checked' : '' %> 
                    >
                  </td>
                <td>
                  <input 
                    type="checkbox" 
                    name="baja_<%= usuario.id %>" 
                    <%= usuario.bajas ? 'checked' : '' %> 
                  >
                </td>
                <td>
                  <input 
                    type="checkbox" 
                    name="admin_<%= usuario.id %>" 
                    <%= usuario.is_admin ? 'checked' : '' %>
                  >
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <% if(messages.success){ %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= messages.success %>
            </div>
          <% } %>
          <% if(messages.error){ %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= messages.error %>
            </div>
          <% } %>
          <div class="submit-button" style="display: flex; justify-content: flex-end; gap: 10px;">
            <a href="/index" class="btn btn-info">
                <i class="fas fa-back"></i> Volver al Index
            </a>
            <a href="/admin/logs" class="btn btn-success">
                <i class="fas fa-list"></i> Logs
            </a>
            <button type="submit" class="btn btn-primary">Actualizar Permisos</button>
        </div>

      </form>
    </div>
    </body>
    </html>
    